<?import javafx.scene.control.Label?><?import javafx.scene.control.TextField?><?import javafx.scene.layout.*?><?import view.controls.NumericTextField?><?import java.net.URL?>
<fx:root xmlns:fx="http://javafx.com/fxml" type="javafx.scene.layout.VBox" id="page">
    <stylesheets>
        <URL value="@../css/page.css" />
    </stylesheets>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints hgrow="ALWAYS" percentWidth="10" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER" />
        </rowConstraints>
        <Label text="Monitor Address:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="monitorAddressTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity" />
        <Label text="Monitor Port:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <NumericTextField fx:id="monitorPortTextField" GridPane.columnIndex="3" GridPane.rowIndex="0" />
    </GridPane>
</fx:root>
